    <Text>
      <GUID>1742000102</GUID>
      <Text>Aktive Pendler</Text>
    </Text>
  </ModOp>
  
  <!-- Statusmeldungen -->
  <ModOp Type="add" Path="/TextExport/Texts">
    <Text>
      <GUID>1742000200</GUID>
      <Text>Portus Operarum betriebsbereit</Text>
